<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailArtikelActivity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_detail_artikel"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_detail_aetikel_from_dataset"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/tv_detail_title"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:text="jkjkjkjk"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/img_detail_artikel"/>

    <TextView
        android:id="@+id/tv_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:layout_margin="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/blue"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>